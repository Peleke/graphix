{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@graphix/core": ["./packages/core/src/index.ts"],
      "@graphix/core/*": ["./packages/core/src/*"],
      "@graphix/server": ["./packages/server/src/index.ts"],
      "@graphix/server/*": ["./packages/server/src/*"],
      "@graphix/skills": ["./packages/skills/src/index.ts"],
      "@graphix/skills/*": ["./packages/skills/src/*"],
      "@graphix/client": ["./packages/client/src/index.ts"],
      "@graphix/client/*": ["./packages/client/src/*"]
    },
    "types": ["bun-types"]
  },
  "include": ["src/**/*", "packages/*/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
