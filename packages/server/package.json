{
  "name": "@graphix/server",
  "version": "0.1.0",
  "description": "MCP + REST server for graphix",
  "type": "module",
  "main": "./src/index.ts",
  "bin": {
    "graphix-server": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
